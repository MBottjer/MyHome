<% if current_user %>

  <div class="row">

    <div class="small-6 large-centered columns middle">
      <ul class="nav nav-pills nav-stacked">
      <% @links.each do |link| %>
        <div class="breakers">
          <li><a href="<%= link.uri %>" class="<%= link.has_relevant_icon %>"><%= link.name %></a><span class="editButton">&nbsp;&nbsp;<%= link_to 'Edit', edit_link_path(link) %></span></li>
        </div>
      <% end %>
      </ul>

    </div>

    <script>
      // setTimeout(function() {window.location = "http://www.google.com/"; }, 4000);
    </script>
  </div>

<% else %> 

  <div class="row">
    <div class="small-6 large-centered columns middle">
      Hello, nothing to see here.
    </div>
  </div>


<% end %>


